@model MockUp.Models.SignInModel

@{
    ViewData["Title"] = "SignIn";
}
<head>
	<link rel="stylesheet" href="~/css/login.css">
</head>


<div class="box">
	<form asp-action="SignIn">
		<span class="text-center">login</span>
	<div class="input-container">
			<input asp-for="Email" type="text" required="" />
			<label asp-for="Email">Correo</label>
			<span asp-validation-for="Email" style="color:red;"></span>
		</div>
	<div class="input-container">
			<input asp-for="Password" type="mail" required="" />
			<label asp-for="Password">Contraseña</label>
			<span asp-validation-for="Password" style="color:red;"></span>
		</div>
		<button type="submit" class="btn">Enviar</button>
		<button type="button" class="btn" onclick="document.location.href='Registration';">Registrar</button>
	</form>	
	 
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
